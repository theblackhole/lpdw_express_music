<% include partials/header %>
<div class="row">
   <div class="col-md-8 col-md-offset-2">
      <h2><%= user.displayName %><small><%= user.username %></small></h2>
   </div>
</div>

<div class="row">
   <div class="col-md-8 col-md-offset-2 panel">
      <legend>Favorites Songs</legend>
      <table class="table table-striped table-hover">
         <thead>
            <tr>
               <th>Title</th>
               <th>Artist</th>
               <th>Action</th>
            </tr>
            </thead>
         <tbody>
         <% if(favoriteSongs) { %>
            <% favoriteSongs.forEach(function(song) { %>
            <tr>
               <td><a href="/songs/<%= song._id %>"><%= song.title %></a></td>
               <td><%= song.artist %></td>
               <td>
                  <form action="/users/songs/favorites/remove?_method=delete" method="POST" title="Remove from Favorites ?" class="form-inline">
                     <input type="hidden" name="song_id" id="song_id" value="<%= song._id%>">
                     <button type="submit" class="btn btn-danger btn-fab btn-fab-mini">
                        <i class="material-icons">&#xE87D;</i>
                     </button>
                  </form>
               </td>
            </tr>
            <% })%>
         <% } else { %>
            No Favorite Music
         <% } %>
         </tbody>
      </table>
   </div>
</div>
<% include partials/footer %>